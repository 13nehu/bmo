[% PROCESS global/variables.none.tmpl %]

[%# This script/template only handles one bug #%]
[% bug = bugs.0 %]

[% IF !header_done %]
  [% filtered_desc = bug.short_desc FILTER html %]
  [% filtered_timestamp = bug.delta_ts FILTER time %]
  [% bodyclasses = ['bz_bug',
                   "bz_status_$bug.bug_status",
                   "bz_component_$bug.component",
                   "bz_bug_$bug.bug_id"
                   ]
  %]
  [% FOREACH group = bug.groups %]
    [% bodyclasses.push("bz_group_" _ group.name) IF group.ison %]
  [% END %]
  [% PROCESS global/header.html.tmpl
    title = "$terms.Bug $bug.bug_id &ndash; $filtered_desc"
    header = "$terms.Bug&nbsp;$bug.bug_id"
    bodyclasses = bodyclasses
  %]
[% END %]

[% IF nextbug %]
  <hr>
  <p>
    The next [% terms.bug %] in your list is [% terms.bug %]
    <a href="show_bug.cgi?id=[% bug.bug_id %]">[% bug.bug_id %]</a>:
  </p>
  <hr>
[% END %]

<span style="float: right; font-size: 0.85em;">
  <a href="#c[% bug.longdescs.size - 1 %]" accesskey="l"><u>L</u>ast Comment</a>
</span>

<div style="font-size: 0.85em; margin: 0px; margin-bottom: 5px;">[% PROCESS bug/navigate.html.tmpl %]</div>

[% PROCESS bug/edit.html.tmpl %]

<hr>

<div style="font-size: 0.85em; float: right;">
  <a href="show_bug.cgi?format=multiple&amp;id=[% bug.bug_id %]">Format For Printing</a>
  - <a href="show_bug.cgi?ctype=xml&amp;id=[% bug.bug_id %]">XML</a>
  [%+ IF user.in_group('editbugs', product.id) %]- <a href="enter_bug.cgi?cloned_bug_id=[% bug.bug_id %]">Clone This [% terms.Bug %]</a>[% END %]
</div>

[% PROCESS bug/navigate.html.tmpl %]

<br>

[% PROCESS global/footer.html.tmpl %]
