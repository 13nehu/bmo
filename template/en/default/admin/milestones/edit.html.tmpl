[%# INTERFACE:
  # product: object; Bugzilla::Product object representing the product to
  #               which the milestone belongs.
  # milestone: object; Bugzilla::Milestone object representing the
  #                    milestone the user wants to edit.
  #%]

[% PROCESS global/variables.none.tmpl %]

[% title = BLOCK %]Edit Milestone '[% milestone.name FILTER html %]' of product '
                   [%- product.name FILTER html %]'[% END %]
[% PROCESS global/header.html.tmpl
  title = title
  onload = "document.forms['f'].milestone.select()"
%]

<form name="f" method="post" action="editmilestones.cgi">
  <table border="0" cellpadding="4" cellspacing="0">

    <tr>
      <th valign="top" align="right"><label for="milestone">Milestone:</label></th>
      <td><input id="milestone" size="20" maxlength="20" name="milestone" value="
      [%- milestone.name FILTER html %]"></td>
    </tr>
    <tr>
      <th align="right"><label for="sortkey">Sortkey:</label></th>
      <td><input id="sortkey" size="20" maxlength="20" name="sortkey" value="
      [%- milestone.sortkey FILTER html %]"></td>
    </tr>
    <tr>
      <th align="right"><label for="is_active">Active:</label></th>
      [% IF product.default_milestone == milestone.name %]
        <td>
          <input type="checkbox" disabled="disabled" checked="checked" >
          <input type="hidden" name="is_active" value="1">
          <i>Cannot disable default milestone</i>
        </td>
      [% ELSE %]
        <td><input type="checkbox" id="is_active" name="is_active" value="1"
        [%- "checked=\"checked\"" IF milestone.is_active %]></td>
      [% END %]
    </tr>
    <tr>
      <th align="right"><label for="is_searchable">Show on search page:</label></th>
      [% IF product.default_milestone == milestone.name %]
        <td>
          <input type="checkbox" disabled="disabled" checked="checked">
          <input type="hidden" name="is_searchable" value="1">
          <i>Cannot disable default milestone</i>
        </td>
      [% ELSE %]
        <td><input type="checkbox" id="is_searchable" name="is_searchable" value="1"
        [%- "checked=\"checked\"" IF milestone.is_searchable %]></td>
      [% END %]
    </tr>

  </table>

  <input type="hidden" name="milestoneold" value="[% milestone.name FILTER html %]">
  <input type="hidden" name="action" value="update">
  <input type="hidden" name="product" value="[% product.name FILTER html %]">
  <input type="submit" id="update" value="Save Changes">
  <input type="hidden" name="token" value="[% token FILTER html %]">
</form>

[% PROCESS admin/milestones/footer.html.tmpl
  no_edit_milestone_link = 1 %]

[% PROCESS global/footer.html.tmpl %]
