[% PROCESS global/variables.none.tmpl %]

[% PROCESS global/header.html.tmpl
  title = "Review History"
  style_urls = [ "extensions/Review/web/styles/review_history.css" ]
  javascript_urls = [ "js/yui3/yui/yui-min.js",
                      "extensions/Review/web/js/review_history.js" ]
%]
<script type="text/javascript">
YUI({
    base: 'js/yui3/',
    combine: false, 
    groups: {
        gallery: {
            combine: false,
            base: 'js/yui3/',
            patterns: { 'gallery-': {} }
        }
    }
}).use('bz-review-history', function(Y) {
    Y.ReviewHistory.render('#history');
    Y.ReviewHistory.refresh('[% Bugzilla.user.login FILTER js %]');
});
</script>

<div class="yui3-skin-sam">
    <div id="history"></div>
</div>

