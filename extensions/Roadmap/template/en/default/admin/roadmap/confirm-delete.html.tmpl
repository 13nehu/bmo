[% PROCESS global/header.html.tmpl
   title = "Delete Roadmap" 
%]

<table border="1" cellpadding="4" cellspacing="0">
<tr>
  <th align="right">Name:</th>
  <td>[% roadmap.name FILTER html %]</td>
</tr>
<tr>
  <th align="right">Description:</th>
  <td>[% roadmap.description FILTER html_light %]</td>
</tr>
<tr>
  <th align="right">Owner:</th>
  <td>[% roadmap.owner.login FILTER html %]</td>
</tr>
<tr>
  <th align="right">Enabled:</th>
  <td>[% IF roadmap.is_active %]Yes[% ELSE %]No[% END %]</td>
</tr>
</table>

<p>Do you really want to delete this roadmap?</p>

<form method="post" action="page.cgi?id=roadmap/list.html">
  <input type="submit" id="delete" value="Yes, delete">
  <input type="hidden" name="action" value="delete">
  <input type="hidden" name="name" value="[% roadmap.name FILTER html %]">
  <input type="hidden" name="token" value="[% token FILTER html %]">
</form>

[% PROCESS global/footer.html.tmpl %]
