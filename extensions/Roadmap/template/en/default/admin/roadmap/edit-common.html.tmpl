<tr class="even">
  <th>Name:</th>
  <td>
    <input type="text" id="name" name="name" 
           size="40" value="[% roadmap.name FILTER html %]">
  </td>
</tr>
<tr class="odd">
  <th>Description</th>
  <td>
    [% INCLUDE global/textarea.html.tmpl
       id      = 'description'
       name    = 'description'
       minrows = 10
       maxrows = 25
       cols    = constants.COMMENT_COLS
       defaultcontent = roadmap.description
    %]
  </td>
</tr>
<tr class="even">
  <th>Owner</th>
  <td>
    [% INCLUDE global/userselect.html.tmpl
       id    = 'owner'
       name  = 'owner'
       value = roadmap.owner.login
       size  = 40
    %]
  </td>
</tr>
<tr class="odd">
  <th>Sortkey</th>
  <td>
    <input type="text" id="sortkey" name="sortkey" size="40" 
           value="[% (roadmap.sortkey.defined ? roadmap.sortkey : 0) FILTER html %]">
  </td>
</tr>
<tr class="even">
  <th>Deadline</th>
  <td>
    <input type="text" id="deadline" name="deadline" 
           size="10" value="[% roadmap.deadline FILTER html %]">
    <button type="button" class="calendar_button" id="button_calendar_deadline"
            onclick="showCalendar('deadline')"><span>Calendar</span>
    </button>
    <div id="con_calendar_deadline"></div>
    <script type="text/javascript">
      createCalendar('deadline');
    </script> 
  </td>
</tr>
